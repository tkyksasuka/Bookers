<html>
  <head>
    <title>WebCampBackendNew</title>
    <link rel ="stylesheet" href="/app/assets/stylesheets/application.css">
  </head>

  <body>

  <h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

    <p>Title<br>
    <%= f.text_field :title %>
    </p>

    <p>Body<br>
    <%= f.text_area :body %>
    </p>
    <p>
    <%= f.submit 'Update Book' %>
    </p>

    <% end %>

    <%= link_to "Show", book_path(book.id) %>
    |
    <a href = "/books">Back</a>
  </body>

</html>