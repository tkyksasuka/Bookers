<!DOCTYPE html>

<html>
  <head>
    <title>WebCampBackendNew</title>
    <link rel ="stylesheet" href="/app/assets/stylesheets/application.css">
  </head>

  <body>
    <h1>Books</h1>
    <% @books.each do |book| %>
    <table>
      <thead>
        <tr>
          <th>title</th>
          <th>body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <a href ="/books/#{book.id}">Show</a>
        </td>
        <td>
          <a href ="/books/#{book.id}/edit">Edit</a>
        </td>
        <td>Destroy</td>
      </tbody>
    <% end %>

    <h2>New book</h2>
    <form>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <h4>
      <%= f.submit 'Create Book' %>
      </h4>
    <% end %>
    </form>

   </body>
  </html>